{% extends 'admin/include/header.twig' %}

{% block body %}

    <h1>Edycja ogłoszenia</h1>

    {% autoescape %}
        {{ validation|raw }}
    {% endautoescape %}
    <form class="add_user" action="{{ base_url() }}add/add/edit/{{ edit_ads.id }}" method="POST" id="add_user">


        <div class="form-group">
            <label for="Tytuł">Tytul </label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Tytuł ogłoszenia...." value="{{ edit_ads.title }}">
        </div>
        <div class="form-group">
            <label for="category">category_id</label>
            <input type="text" class="form-control" id="category_id" name="category_id" placeholder="ID kategori...." value="{{ edit_ads.category_id }}">
        </div>
        <div class="form-group">
            <label for="description">Opis</label>
            <textarea type="text" class="form-control" id="description" name="description" placeholder="Podaj Opis...." >{{ edit_ads.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="thumb">Miniaturka</label>
            <input type="text" class="form-control" id="thumb" name="thumb" placeholder="Link do minatury...." value="{{ edit_ads.thumb }}">
        </div>
        <div class="form-group">
            <label for="user_group">Grupa użytkownika</label>
            <select class="form-control" name="group">
                <option value="0">-</option>

                {% for groups in group %}

                    <option value="{{ groups.id }}" {% if group_id == groups.id %} selected="selected" {% endif %}>{{ groups.name }}</option>

                {% endfor %}


            </select>
        </div>
        <button type="submit" class="btn btn-default" id="add_user_button">Edytuj ogłoszenie</button>

    </form>




{% endblock %}

{% block javascripts %}
    <script>

        $("input").on("blur",function () {
            if($('#'+this.id).val()==""){
                console.log("wartosc jest pusta "+ this.id);
                $('#'+this.id+'_alert').remove();
                $('#'+this.id).after('<div id="'+this.id+'_alert" class="alert alert-warning">Musisz uzupełnić te pole</div>');
                $('button').attr("disabled", true);
            }else{
                $('#'+this.id+'_alert').remove();
                $('button').attr("disabled", false);
                console.log("OK");
            }
        })

        $("form").submit(function () {
            if($('#username').val()=="" )
            {
                $('#add_user_button_alert').remove();
                $('#add_user_button').after('<div id="add_user_button_alert" class="alert alert-danger">Musisz uzupełnić wymagane pola</div>');
                return false;
            }
            else {
                return true;
            }

        });


    </script>

{% endblock %}